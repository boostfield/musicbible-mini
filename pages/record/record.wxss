/**index.wxss**/
.container{
  background: #312D26;
  padding: 0;
}
.tablayout{
  width: 100%;
  height: 94rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid rgba(255,255,255,0.2);
}
.tab{
  width:50%;
  height: 100%;
  position:relative;
}
.tab .title{
  position: absolute;
  color:#C1B087;
  font-size: 28rpx;
  letter-spacing: 0;
  text-align: center;
  width: 100%;
  margin: 0 auto;
  top:27rpx;
}
.tab .divider{
  position: absolute;
  width: 170rpx;
  height: 6rpx;
  background:#C1B087;
  bottom: 0rpx;
  left: 102.5rpx;
}

.content{
  background: #3C372F;
  box-sizing: border-box;
  width: 100%;
}

.grid{
  -webkit-box-direction: normal;
    -webkit-box-orient: horizontal;
    -moz-flex-direction: row;
    -webkit-flex-direction: row;
    flex-direction: row;
  flex-wrap: wrap;
  display: flex;
  padding-right: 30rpx;
}

.list{
  -webkit-box-direction: normal;
  -webkit-box-orient: vertical;
  -moz-flex-direction: column;
  -webkit-flex-direction: column;
  flex-direction: column;
  flex-wrap: wrap;
  display: flex;
}

.grid .scroll-view-item{
  box-sizing: border-box;
  padding-top: 61rpx;
  padding-left: 30rpx;
  width:50%;
  display: flex;
  overflow: hidden;
  flex-direction: column;
  justify-content: center;
}

.list .scroll-view-item{
  display: flex;
  overflow: hidden;
  padding: 30rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.grid  .item-image{
  width:100%;
  height: 330rpx;
}

.list .item-content{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.list  .item-image{
  width: 120rpx;
  height: 120rpx;
  flex:auto 1 0;
}

.title{
  width: 100%;
  text-align: start;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}


.grid .item-title{
  width:100%;
  font-size: 32rpx;
  color:#C1B087;
  margin-top: 20rpx;
}

.list .item-title{
  font-size: 34rpx;
  color: #C1B087;
}

.grid .item-subtitle{
  width:100%;
  font-size: 26rpx;
   color:rgba(255,255,255,0.4);
   margin-top: 6rpx;
}

.list .item-subtitle{
    opacity: 0.3;
    font-size: 26rpx;
    margin-top: 6rpx;
    color: #FFFFFF;
}

.loading{
  background: #3C372F;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  padding: 30rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.loading text{
  font-size: 28rpx;
}



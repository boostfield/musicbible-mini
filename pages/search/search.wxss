/**search.wxss**/
.container{
  background: #3C372F;
  padding: 0;
}

.seach-content{
    width: 100%;
    height: 88rpx;
    display: flex;
    background: #312D26;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid rgba(255,255,255,0.2);
}


.seach-content.before .search-btn{
    width: 718rpx;
    height: 56rpx;
    background: #C1B087;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10rpx;
}



.seach-content.after .search-btn{
    width: 634rpx;
    height: 56rpx;
    background: #C1B087;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 10rpx;
}

.seach-content.after .btn-cancle{
    font-size: 32rpx;
    margin-left: 18rpx;
    color: #C1B087;
}

.seach-content.before .search-btn image{
    width: 25rpx;
    height: 25rpx;
}

.seach-content.after .content-left{
    width: 584rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}


.seach-content.after .icon-search{
    width: 25rpx;
    height: 25rpx;
    margin-left: 16rpx;
}

.seach-content.after .edt-search{
    width: 100%;
    margin-left: 11rpx;
    font-size: 26rpx;
    color: #000000;
    letter-spacing: 0.27px;
}
.seach-content.after .icon_delete{
    width: 25rpx;
    height: 25rpx;
    margin-right: 16rpx;
}

.seach-content.before .search-btn text{
    font-size: 26rpx;
    margin-left: 10rpx;
    color: #000000;
    letter-spacing: 0.27px;
}

.hot-word-content{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: 70rpx;
    margin-bottom: 70rpx;
}

.hot-word-content .title{
    font-size: 28rpx;
    margin-bottom: 9rpx;
    color: rgba(255,255,255,0.4);
}

.hot-word-content .name{
    font-size: 32rpx;
    color: #C1B087;
    margin-top: 20rpx;
    letter-spacing: 0.34rpx;
}

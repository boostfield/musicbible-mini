/**search.wxss**/
.container{
  background: #3C372F;
  padding: 0;
}

.seach-content{
    width: 100%;
    height: 88rpx;
    display: flex;
    background: #312D26;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid rgba(255,255,255,0.2);
}

.search-btn{
    width: 718rpx;
    height: 56rpx;
    background: #C1B087;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
}

.search-btn image{
    width: 25rpx;
    height: 25rpx;
}
.search-btn text{
    font-size: 26rpx;
    margin-left: 10rpx;
    color: #000000;
    letter-spacing: 0.27px;
}

.hot-word-content{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: 70rpx;
    margin-bottom: 70rpx;
}

.hot-word-content .title{
    font-size: 28rpx;
    margin-bottom: 9rpx;
    color: rgba(255,255,255,0.4);
}

.hot-word-content .name{
    font-size: 32rpx;
    color: #C1B087;
    margin-top: 20rpx;
    letter-spacing: 0.34rpx;
}

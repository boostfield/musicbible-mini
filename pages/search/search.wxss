/**search.wxss**/
.container{
  padding: 0;
}

.seach-content{
    width: 100%;
    height: 88rpx;
    display: flex;
    position:fixed;/*固定作用*/
    background: #312D26;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid rgba(255,255,255,0.2);
}


.seach-content.before .search-btn{
    width: 718rpx;
    height: 56rpx;
    background: #C1B087;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10rpx;
}


.seach-content.after .search-btn{
    width: 634rpx;
    height: 56rpx;
    background: #C1B087;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 10rpx;
}

.seach-content.after .btn-cancle{
    font-size: 32rpx;
    margin-left: 18rpx;
    color: #C1B087;
}

.seach-content.before .search-btn image{
    width: 25rpx;
    height: 25rpx;
}

.seach-content.after .content-left{
    width: 584rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}


.seach-content.after .icon-search{
    width: 25rpx;
    height: 25rpx;
    margin-left: 16rpx;
}

.seach-content.after .edt-search{
    width: 100%;
    margin-left: 11rpx;
    font-size: 26rpx;
    color: #000000;
    letter-spacing: 0.27px;
}
.seach-content.after .icon_delete{
    width: 25rpx;
    height: 25rpx;
    margin-right: 16rpx;
}

.seach-content.before .search-btn text{
    font-size: 26rpx;
    margin-left: 10rpx;
    color: #000000;
    letter-spacing: 0.27px;
}

.fitSystemSearchBar{
    padding-top: 88rpx;
}

/***hot words***/
.hot-word-content{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: 70rpx;
    margin-bottom: 70rpx;
}

.hot-word-content .title{
    font-size: 28rpx;
    margin-bottom: 13.5rpx;
    color: rgba(255,255,255,0.4);
}

.hot-word-content .name{
    font-size: 32rpx;
    color: #C1B087;
    margin-top: 30rpx;
    letter-spacing: 0.34rpx;
}

/***associate words***/
.associate-word-content{
    background: rgba(255,255,255,0.07);
    width: 100%;
    display: flex;
    flex-direction: column;
}
.associate-word-content .wrapper{
    width: 720rpx;
    box-sizing: border-box;
    height: 90rpx;
    padding-left: 36rpx;
    padding-right: 49rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid rgba(255,255,255,0.2);
    margin-left: 30rpx;
}

.associate-word-content .name{
    font-size: 28rpx;
    color: #FFFFFF;
    letter-spacing: 0.3px;
}


/***search result***/
.content{
  box-sizing: border-box;
  background: #3C372F;
  width: 100%;
}

.list{
  -webkit-box-direction: normal;
  -webkit-box-orient: vertical;
  -moz-flex-direction: column;
  -webkit-flex-direction: column;
  flex-direction: column;
  flex-wrap: wrap;
  width: 100%;
  display: flex;
}

.list navigator{
  box-sizing: border-box;
  display: flex;
  padding-top: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  width: 720rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left: 30rpx;
  border-bottom: 1rpx solid rgba(255,255,255,0.2);
}

.list  .item-image{
  width: 120rpx;
  height: 120rpx;
  flex:none 1 120rpx;
}

.list .item-content{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  width: 550rpx;
}

.list .item-title{
  font-size: 34rpx;
  color: #C1B087;
}

.list .item-subtitle{
    font-size: 26rpx;
    margin-top: 6rpx;
   color:rgba(255,255,255,0.3);
}

  <view class="container" hidden="{{!isHidePreivew}}">

      <!--scroll-view-->
        <scroll-view id="scroll" class="scroll-view_H" scroll-x="true" style="width: 100%"  bindscroll="scroll"  scroll-left="{{scrollLeft}}"  >
          <block wx:for="{{record.coverList}}">
            <image id="{{item.id}}" class="scroll-view-item_H" src="{{item.imageCoverUrl}}" bindtap="actionImagePreview" data-cover="{{item.imageCoverUrl}}"></image>
          </block>
        </scroll-view>

        <!--dots-->
        <view class="dots">
          <block wx:for="{{record.coverList}}">
            <view class="dot {{item.selected}}" ></view>
          </block>
        </view>

        <!-- record detail -->
        <view class="text-content">
          <text class="title">{{record.title}}</text>
          <text class="subtitle">{{record.subtitle}}</text>
            <view class="section intro">
              <text class="attribute">唱片简介：</text> <text class="value">{{record.intro}}</text>
            </view>
            <view class="section serialnumber">
              <text class="attribute">唱片编号：</text> <text class="value">{{record.serialnumber}}</text>
            </view>
            <view class="section year">
              <text class="attribute">唱片年份：</text> <text class="value">{{record.year}}</text>
            </view>
            <view class="section lable">
              <text class="attribute">唱片厂牌：</text> <text class="value">{{record.lable}}</text>
            </view>
            <view class="section composor">
              <text class="attribute">作曲家：</text> <text class="value">{{record.composor}}</text>
            </view>
            <view class="section artist">
              <text class="attribute">艺术家：</text> <text class="value">{{record.artist}}</text>
            </view>
        </view>

       
  </view>

   <!--image preview-->
   <view class="preview" hidden="{{isHidePreivew}}">
         <swiper class="swiper-body" indicator-dots="{{true}}"autoplay="{{false}}" interval="{{0}}" duration="{{0}}" bindtap="closePreview" >
            <block wx:for="{{tracklist}}">
              <swiper-item class="slide-item">
                <image class="preview-image" src="{{item.imageCoverUrl}}"  mode="aspectFit"></image>
              </swiper-item>
            </block>
        </swiper>
   </view>




  <view class="container" hidden="{{!isHidePreivew}}">

      <!--scroll-view-->

        <scroll-view id="scroll" class="scroll-view_H" scroll-x="true" style="width: 100%"  bindscroll="scroll"  scroll-left="{{scrollLeft}}"  >
          <block wx:for="{{record.Images}}">
            <image id="{{item.id}}" class="scroll-view-item_H" src="{{item.imageCoverUrl}}" bindtap="actionImagePreview" data-cover="{{Images}}"></image>
          </block>
        </scroll-view>

        <!--dots-->
        <view class="dots">
          <block wx:for="{{record.Images}}">
            <view class="dot {{item.selected}}" ></view>
          </block>
        </view>
       <!--title-->
       <view class="text-title">
          <text class="title">{{record.TitleCN}}</text>
          <text class="subtitle">{{record.TitleEN}}</text>
       </view>

       <!--block basic-info-->
       <view class="section-main section-basic-info">
          <text class="title">基本信息</text>
       </view>

        <!-- record detail -->
        <view class="text-content">
            <view class="section intro" hidden="{{record.MediumType?false:true}}">
              <text class="attribute">唱片介质：</text> <text class="value">{{record.MediumType?record.MediumType:"无"}}</text>
            </view>
            <view class="section serialnumber" hidden="{{record.SerilNumber?false:true}}">
              <text class="attribute">唱片编号：</text> <text class="value">{{record.SerilNumber?record.SerilNumber:"无"}}</text>
            </view>
            <view class="section year" hidden="{{record.PubYear?false:true}}">
              <text class="attribute">唱片年份：</text> <text class="value">{{record.PubYear?record.PubYear:"无"}}</text>
            </view>
            <view class="section lable" hidden="{{record.RecordPublisher.NameEN?false:true}}">
              <text class="attribute">唱片厂牌：</text> <text class="value">{{record.RecordPublisher.NameEN?record.RecordPublisher.NameEN:"无"}}</text>
            </view>
            <view class="section composor" hidden="{{record.HiFiComposers[0]?false:true}}">
              <text class="attribute">作曲家：</text> <text class="value">{{record.HiFiComposers[0]?record.HiFiComposers[0]:"无"}}</text>
            </view>
            <view class="section artist" hidden="{{record.HiFiArtists[0]?false:true}}">
              <text class="attribute" bindtap="onTest">艺术家：</text> <text class="value">{{record.HiFiArtists[0]?record.HiFiArtists[0]:"无"}}</text>
            </view>
        </view>
       <!--block basic-info-->
       <view class="section-main section-basic-info" wx:if="{{record.Audios.length!=0}}">
          <text class="title">音乐试听</text>
       </view>

        <view class="media-list">
            <block  wx:for="{{record.Audios}}" >
              <template is="media-list-item" data="{{...item}}"/>
            </block>
        </view>
       
  </view>


    <!--音频的列表-->
    <template name="media-list-item">
        <div class="media-list-item" data-audiourl="{{AudioUrl}}" data-index="{{index}}"  bindtap="actionPlayMusic">
          <image class="item-image "  mode="scaleToFill" src="{{isMusicPlaying?'../../image/ic_detail_music_p.png':'../../image/ic_detail_music_n.png'}}"></image>
          <view class="item-content">
              <text  class="title {{selected}}">{{Title?Title:""}}</text>
          </view>
        </div>
      </template>

   <!--image preview-->
   <view class="preview" hidden="{{isHidePreivew}}">
         <swiper class="swiper-body" indicator-dots="{{true}}"autoplay="{{false}}" interval="{{0}}" duration="{{0}}"  current="{{currentIndex}}" bindchange="onCurrentPageSelected" >
            <block wx:for="{{record.Images}}">
              <swiper-item class="slide-item">
                <image class="preview-image" src="{{item.imageCoverUrl}}"  mode="aspectFit"  bindtap="closePreview"></image>
              </swiper-item>
            </block>
        </swiper>
   </view>




.container{
    padding: 0;
    background: #3C372F;
    
}
.scroll-view_H{
    white-space: nowrap;
    height: 430rpx;
    margin-top: 60rpx;
    background: #3C372F;
}

.scroll-view-item_H{
    display: inline-block;
    height: 430rpx;
    width: 430rpx;
    margin-left: 40rpx;
}

.scroll-view-item_H:first-child{
    margin-left: 160rpx;
}
.scroll-view-item_H:last-child{
    margin-right: 160rpx;
}

.dots{
    height: 70rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
}
.dot{
    height: 10rpx;
    width: 10rpx;
    opacity: 0.2;
    margin-left: 20rpx;
    background: #C1B087; 
    border-radius: 50rpx;
}

.dot.selected{
    opacity:1;
}

.text-title{
    padding: 30rpx;
}

.text-title .title{
    font-size: 40rpx;
    color: #C1B087;
    display: block;
    white-space:normal;
}
.text-title .subtitle{
    opacity: 0.5;
    font-size: 32rpx;
    margin-top: 6rpx;
     display: block;
    color: #C1B087;
    white-space:normal;
}

.section-main{
    display: flex;
    width: 100%;
    height: 80rpx;
    align-items: center;
    background: rgba(255,255,255,0.08);
}

.section-main .title{
    font-size: 34rpx;
    color: #C1B087;
    display: inline-block;
    margin-left: 30rpx;
    letter-spacing: 0;
}



.text-content{
    box-sizing: border-box;
    width: 100%;
    flex-wrap: nowrap;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding: 30rpx;
}


text.attribute{
    opacity: 0.4;
    font-size: 28rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    line-height: 50rpx;
    width: 140rpx;
    display: inline-block;
}
text.value{
    font-size: 28rpx;
    width: 530rpx;
    height: 50rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    margin-left: 20rpx;
    line-height: 50rpx;
    display: inline-block;
}
/*** preview ***/
.preview{
    width: 100%;
    height: 1150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background: #3C372F;
}

.swiper-body{
    width: 750rpx;
    height: 850rpx;
}
.slide-item{
    width: 750rpx;
    height: 750rpx;
}

.preview-image{
    width: 750rpx;
    height: 750rpx;
}

.media-list{
    box-sizing: border-box;
    width: 100%;
    flex-wrap: nowrap;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;

}

.media-list-item{
 box-sizing: border-box;
  display: flex;
  padding-top: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  width: 720rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left: 30rpx;
  border-bottom: 1rpx solid rgba(255,255,255,0.2);
}
.media-list-item .item-image{
    width: 52rpx;
    height: 52rpx;
    flex:none 1 120rpx;
}

.media-list-item .item-content{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  width: 608rpx;
}

.media-list-item .item-content .title{
    display: inline-block;
    width: 100%;
    text-align: start;
    color: white;
    font-size: 28rpx;
}

.media-list-item .item-content .title.selected{
    color: #C1B087;
}


